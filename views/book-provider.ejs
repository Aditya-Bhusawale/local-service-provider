<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Book Provider</title>

  <link rel="stylesheet" href="/css/book-provider.css">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
</head>
<body>

<header class="topbar">
  <div class="logo">ServiceHub</div>
  <a href="/services" class="back">
    <i class="fas fa-arrow-left"></i> Back
  </a>
</header>

<main class="booking-wrapper">

  <!-- PROVIDER CARD -->
  <section class="provider-card">
    <img 
  src="<%= provider.image || 'https://cdn-icons-png.flaticon.com/512/3135/3135715.png' %>" 
  alt="Provider"
  onerror="this.onerror=null; this.src='https://cdn-icons-png.flaticon.com/512/3135/3135715.png';">


    <div class="details">
      <h2><%= provider.name %></h2>

      <span class="badge"><%= provider.serviceType %></span>

      <div class="stats">
        <span>⭐ <%= provider.rating || 4.5 %></span>
        <span><i class="fas fa-location-dot"></i> <%= provider.city %></span>
      </div>

      <p class="about">
        <%= provider.about || "Professional and reliable service provider with quality experience." %>
      </p>

      <div class="extra">
        <span><i class="fas fa-briefcase"></i> <%= provider.experience %> yrs experience</span>
        <span><i class="fas fa-circle-check"></i> Available</span>
      </div>
    </div>
  </section>

  <!-- BOOKING FORM -->
  <section class="booking-card">
    <h3>Book Appointment</h3>

    <form action="/confirm-booking" method="POST">
      <input type="hidden" name="providerId" value="<%= provider._id %>">

      <!-- NEW: USER ADDRESS -->
      <label>Service Address</label>
      <textarea 
        name="address" 
        rows="3" 
        placeholder="Enter your full address" 
        required
        style="resize:none; border-radius:10px; padding:0.7rem; border:1px solid #e5e7eb; font-family:Poppins;">
      </textarea>

      <!-- NEW: PINCODE -->
      <label>Pincode</label>
      <input 
        type="text" 
        name="pincode" 
        pattern="[0-9]{6}" 
        placeholder="6-digit pincode" 
        required>

      <label>Date</label>
      <input type="date" name="date" required>

      <label>Time</label>
      <input type="time" name="time" required>

      <button type="submit">
        <i class="fas fa-calendar-check"></i> Confirm Booking
      </button>
    </form>


    <div class="price-box">
      <p>Service Price</p>
      <h2>₹ <%= provider.pricePerVisit %></h2>
      <span>per visit</span>
    </div>
  </section>

</main>

</body>
</html>
